<div class="row">
    <div class="col-sm-6">
        <%= link_to 'Back', :back, :class => 'back-btn btn btn-secondary' %>
    </div>
    <div class="col-sm-6">
        <%= link_to 'RSVP', '#', :class => 'rsvp-big btn btn-success' %>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 page-header">
        <h1><%= @game.title %></h1>
    </div>
</div>

<div id="single-game-map" class="col-sm-12" data-court="<%= render :partial => 'maps/maps', :locals => { game: @game } %>" data-api-key="<%= ENV["google_api_key"] %>"></div>

<div class="row">
    <div class="game-info col-sm-4">
        <h2>Date</h2>
        <p><%= @game.date %></p>
    </div>
    <div class="game-info col-sm-4">
        <h2>Address</h2>
        <p><%= "#{@court.street_number} #{@court.street_name}, #{@court.city} #{@court.state}, #{@court.zip_code}" %></p>
    </div>
    <div class="game-info col-sm-4">
        <h2>Player Count</h2>
        <p><%= @players.length %> / 10</p>
    </div>
</div>

<div class="arrow"></div>

<div class="row">
    <div class="col-sm-12">
        <h2 class="player-list-title">Players in this game</h2>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Skill Level</th>
                <th scope="col">More</th>
            </tr>
        </thead>
        <tbody>
            <% @players.each do | player | %>
            <tr>
                <td><%= "#{player.first_name} #{player.last_name}" %></td>
                <td><%= player.skill_level.capitalize %></td>
                <td><%= link_to 'Add Friend', '#', :class => 'btn btn-secondary' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= javascript_pack_tag 'maps' %>
