<div class="row">
    <div class="col-sm-6">
        <%= link_to 'Back', games_path, :class => 'back-btn btn btn-secondary' %>
    </div>
    <div class="col-sm-6">
        <% if player_is_creator?(@game) %>
            <%= link_to 'Remove Game', game_path(:id => @game.id), :method => :delete, data: { confirm: 'Are you sure you want to remove this game from Hoopfinder? The game will be deleted and all players will be removed.' }, :class => 'rsvp-big btn btn-danger' %>
        <% elsif player_in_game?(@game.id) %>
            <%= link_to 'Leave Game', user_game_path(:id => get_user_game_id(current_user.id, @game.id)), :method => :delete, data: { confirm: 'Are you sure you want to leave this game?' }, :class => 'rsvp-big btn btn-danger' %>
        <% else %>
            <%= link_to 'RSVP', user_games_path(:user_id => current_user.id, :game_id => @game.id), :method => :post, :class => 'rsvp-big btn btn-success' %>
        <% end %>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 page-header">
        <h1><%= @game.title %></h1>
    </div>
</div>

<div id="single-game-map" class="col-sm-12" data-court="<%= render :partial => 'maps/maps', :locals => { game: @game } %>" data-api-key="<%= ENV["google_api_key"] %>"></div>

<div class="row">
    <div class="game-info col-sm-4">
        <h2>Date</h2>
        <p><%= @game.date.strftime("%A, %m/%d/%Y at %H:%M %p") %></p>
    </div>
    <div class="game-info col-sm-4">
        <h2>Address</h2>
        <p><%= format_display_address(@court) %></p>
    </div>
    <div class="game-info col-sm-4">
        <h2>Player Count</h2>
        <p><%= @players.length %> / 10</p>
    </div>
</div>

<div class="arrow"></div>

<div class="row">
    <div class="col-sm-12">
        <h2 class="player-list-title">Players in this game</h2>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Skill Level</th>
                <th scope="col">More</th>
            </tr>
        </thead>
        <tbody>
            <% @players.each do | player | %>
            <tr>
                <td><%= "#{player.first_name} #{player.last_name}" %></td>
                <td><%= player.skill_level.capitalize %></td>
                <td><%= link_to 'Add Friend', '#', :class => 'btn btn-secondary' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= javascript_pack_tag 'maps' %>
