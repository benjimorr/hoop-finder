<%= form_for(game, html: {class: "game-form"}) do |f| %>
    <% if game.errors.any? %>
        <div class="alert alert-danger">
            <h4><%= pluralize(game.errors.count, "error") %></h4>
            <ul>
                <% game.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col-sm-12">
            <%= form_group_tag(game.errors[:title]) do %>
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control", placeholder: "Enter game title" %>
            <% end %>

            <%= form_group_tag(game.errors[:date]) do %>
                <%= f.label :date %>
                <%= f.text_field :date, id: "date-picker", class: "flatpickr flatpickr-input form-control", placeholder: "Enter game date" %>
            <% end %>

            <%= hidden_field_tag 'court_id', court_id  %>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <%= f.submit "Save Game", class: "save-btn btn btn-success" %>
            <%= link_to "Cancel", games_path, class: "back-btn btn btn-secondary" %>
        </div>
    </div>
<% end %>
